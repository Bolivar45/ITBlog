@model ITBlog.Models.Post
@{
    ViewBag.Title = "Create";
}


<h2>Create</h2>
@using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        @Html.ValidationSummary(true)
        <div>
            <p>Введите название поста: </p>
            <div>
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div>
            <p>Поле для самого поста: </p>
            <div>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div>
            <p>Картинка поста: </p>
            <div>
                <input type="file" required='required' name="upload" accept="image/jpg" /><br>
            </div>
        </div>
        <input type="submit" value="Создать" />
    </fieldset>
}

@Html.ActionLink("К списку новостей", "Index", "Home")


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}